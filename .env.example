NEXT_PUBLIC_SITE_URL=https://assistjur.com.br
NEXT_PUBLIC_EXTRA_ORIGINS=https://assistjur.com,https://www.assistjur.com,https://www.assistjur.com.br
# Supabase
NEXT_PUBLIC_SUPABASE_URL=<<MANTER>>
NEXT_PUBLIC_SUPABASE_ANON_KEY=<<MANTER>>
# Sentry
NEXT_PUBLIC_SENTRY_ORIGIN_REGEX=assistjur\.com(\.br)?

# 🔑 Configurações do Supabase
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_PUBLISHABLE_KEY="public-anon-key"

# ⚖️ Configurações do Assistjur
# Nome da organização default (pode ser sobrescrito no painel admin)
VITE_DEFAULT_ORG="assistjur"

# 🤖 OpenAI (usado nas Edge Functions e Playground)
# 👉 Nunca use a chave real aqui — só documente
OPENAI_API_KEY="sk-xxxxxxx"

# 🌐 Configurações de ambiente
# Pode ser: development | staging | production
NODE_ENV="development"

# 📊 Telemetria e Observabilidade (em breve)
# Exemplo: Sentry, Logflare, OpenTelemetry
SENTRY_DSN=""

# 📩 E-mail / Magic Link (se aplicável)
# Configurações SMTP podem ser gerenciadas via Supabase
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""

# 🛡️ CORS
# Domínios permitidos separados por vírgula
ALLOWED_ORIGINS="http://localhost:5173,https://preview--assitjur.lovable.app,https://<prod>.com"

# 📈 Rate limiting
RATE_LIMIT_MAX="20"
RATE_LIMIT_WINDOW_MS="60000"

# ⏱️ Auto logout after inactivity (minutes)
VITE_INACTIVITY_TIMEOUT_MINUTES="30"

# 🛡️ JWT e Service Role
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="public-anon-key"
SUPABASE_SERVICE_ROLE_KEY="service-role-key"
JWT_SECRET="sup3r-s3cret"
